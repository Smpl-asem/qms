@* card for show parnd cat  *@
<style>
 .card:hover {
      background-color: #ceddfa  !important;
     
    }

</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xxl row">
    @if(@ViewBag.Categories != null){
        foreach(var item in ViewBag.Categories){
            <div class="card col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 m-2" >
                <div class="card-body text-center">
                    <h5 class="card-title alert alert-primary text-center">@item.CatName</h5>
               
                    <h6 class="card-subtitle mb-2 text-muted">دسته اصلی</h6>
                    
                    <a href="#" class="card-link mt-2">کد : @item.CatCode</a> <br><br>
                        @if(item.ParentId==0){
                            <a href="/Admin/home/Categories/@ViewBag.Id?parentId=@item.Id" class="card-link btn btn-outline-dark form-control">دسته های زیرین</a>
                            <br>
                        }
                            <a href="/Admin/home/AddCategories/@ViewBag.Id?parentId=@item.ParentId&CatId=@item.Id" class="card-link btn btn-outline-dark form-control">انتخاب دسته</a>

                    </div>
            </div>
            <br>
        }
    }

    
    
    </div>
</div>